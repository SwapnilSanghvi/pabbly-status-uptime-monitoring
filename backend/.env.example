# Database Configuration
DATABASE_URL=postgresql://postgres:YOUR_PASSWORD_HERE@localhost:5432/status_monitor

# JWT Authentication
# IMPORTANT: Generate a strong secret using: openssl rand -base64 32
JWT_SECRET=CHANGE_THIS_TO_A_STRONG_RANDOM_SECRET
JWT_EXPIRY=7d

# Server
PORT=5000
NODE_ENV=development

# Monitoring
PING_INTERVAL_MINUTES=1
LOG_RETENTION_DAYS=90

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:5173

# Email (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM=Status Monitor <noreply@statusmonitor.com>
